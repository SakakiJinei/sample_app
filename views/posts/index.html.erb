        <div class="post-left-index">
          <img src="<%= "/post_images/#{post.image_name}" %>">
        </div>
        <div class="post-right-index">
          <div class="post-user-name">投稿者：
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
          </div>
          <p>カテゴリー：<%= post.category %></p>
          <p><%= link_to(post.title, "/posts/#{post.id}") %></p>
          <p><%= post.price %>円</p>
    
