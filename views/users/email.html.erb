<div class="main users-new">
  <div class="container">
    <div class="form-heading">メールアドレスの入力</div>
    <div class="form users-form">
      <div class="form-body">

        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
        
        <%= form_tag("/submit") do %>
          <p>メールアドレス</p>
          <input name="email">
          <input type="submit" value="変更">
        <% end %>
        
      </div>
    </div>
  </div>
</div>
