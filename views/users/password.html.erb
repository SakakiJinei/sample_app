<div class="main users-new">
  <div class="container">
    <div class="form-heading">パスワード変更</div>
    <div class="form users-form">
      <div class="form-body">

        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
        
        <%= form_tag("/reset/#{@user.id}") do %>
          <p>パスワード</p>
          <input type="password" name="password">          
          <p>パスワード ＊確認用</p>
          <input type="password" name="repassword">
          <input type="submit" value="変更">
        <% end %>
      </div>
    </div>
  </div>
</div>
